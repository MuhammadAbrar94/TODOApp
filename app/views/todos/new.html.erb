<h1>Creating New TODO>
<% if @todo.errors.any? %>
    <h2>The following errors prevented the todo from being saved</h2>
    <ul>
    <% @todo.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @todo do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br><br>

    <%= f.label :description %>
    <%= f.text_area :description %>
    <br><br>

    <%= f.submit %>
<% end %>